pipeline {
    agent any

    tools {
        maven 'Maven'
        jdk 'JDK_11'
    }

    stages {
        stage('Build') {
            steps {
                sh "${tool 'Maven'}/bin/mvn clean compile"
            }
        }
        stage('Test') {
            steps {
                sh "${tool 'Maven'}/bin/mvn test"
            }
        }
        stage('Deploy') {
            steps {
                sh "${tool 'Maven'}/bin/mvn package"
            }
        }
        stage('SonarQube Scan') {
            steps {
                withSonarQubeEnv('SonarQube') {
                    sh "${tool 'SonarRunnerInstallation'}/bin/sonar-scanner -Dsonar.projectKey=Calculator -Dsonar.sources=. -Dsonar.host.url=http://localhost:9000 -X"
                }
            }
        }
    }
}
