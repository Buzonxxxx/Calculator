pipeline {
    agent any

    tools {
        maven 'Maven'
        jdk 'JDK_11'
        sonar 'SonarScanner' // Make sure this matches the tool name configured in Jenkins
    }

    stages {
        stage('Build') {
            steps {
                sh "${tool 'Maven'}/bin/mvn clean compile"
            }
        }
        stage('Test') {
            steps {
                sh "${tool 'Maven'}/bin/mvn test"
            }
        }
        stage('Deploy') {
            steps {
                sh "${tool 'Maven'}/bin/mvn package"
            }
        }
        stage('SonarQube Scan') {
            steps {
                withSonarQubeEnv('SonarQube') {
                    sh "${tool 'SonarScanner'}/bin/sonar-scanner -Dsonar.projectKey=Calculator -Dsonar.sources=."
                }
            }
        }
    }
}
