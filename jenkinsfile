pipeline {
    agent any

    tools {
        maven 'Maven'
        jdk 'JDK_11'
    }

    stages {
        stage('Build') {
            steps {
                sh "${tool 'Maven'}/bin/mvn clean compile"
            }
        }
        stage('Test') {
            steps {
                sh "${tool 'Maven'}/bin/mvn test"
            }
        }
        stage('Deploy') {
            steps {
                sh "${tool 'Maven'}/bin/mvn package"
            }
        }
        stage('SonarQube Scan') {
            environment {
                scannerHome = tool 'SonarRunnerInstallation'
            }
            steps {
                withSonarQubeEnv('SonarQube') {
                    sh "${scannerHome}/bin/sonar-scanner -Dsonar.projectKey=Calculator -Dsonar.sources=. -Dsonar.host.url=http://127.0.0.1:9000 -Dsonar.java.binaries=target/classes -X"
                }
            }
        }
    }
}
