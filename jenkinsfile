pipeline {
    agent any

    tools {
        maven 'Maven'
        jdk 'JDK_11' 
        hudson.plugins.sonar.SonarRunnerInstallation 'SonarScanner'
    }

    stages {
        stage('Build') {
            steps {
                sh "${tool 'Maven'}/bin/mvn clean compile"
            }
        }
        stage('Test') {
            steps {
                sh "${tool 'Maven'}/bin/mvn test"
            }
        }
        stage('Deploy') {
            steps {
                sh "${tool 'Maven'}/bin/mvn package"                
            }
        }
        stage('SonarQube Scan') {
            steps {
                withSonarQubeEnv('SonarQube') {
                    // sh "${tool 'Maven'}/bin/mvn sonar:sonar -Dsonar.token=squ_dff72564cff3b4f315758c0c4326a0cda7eb1488"
                    sh "${tool 'SonarScanner'}/bin/sonar-scanner -Dsonar.projectKey=Calculator -Dsonar.sources=."
                }
            }
        }
    }
}